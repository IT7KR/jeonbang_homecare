# .env.example - Environment variables template
# Copy this file to .env and fill in the values

# ===========================================
# Application Environment
# ===========================================
APP_ENV=development                    # development | production
NODE_ENV=development                   # development | production

# ===========================================
# Database Configuration
# ===========================================
DB_USER=jeonbang
DB_PASSWORD=your_secure_password_here  # Required: Set a strong password
DB_NAME=jeonbang_homecare
DB_PORT=5437                          # PostgreSQL port (dev only)

# ===========================================
# Security Keys
# ===========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here        # Required: Application secret key
JWT_SECRET_KEY=your_jwt_secret_here    # Required: JWT signing key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60       # 1시간
JWT_REFRESH_TOKEN_EXPIRE_DAYS=14         # 14일

# Generate with: openssl rand -hex 16 (for AES-256, use 32 bytes)
ENCRYPTION_KEY=your_encryption_key_here  # Required: AES-256 encryption key

# ===========================================
# API Integrations
# ===========================================
# Aligo SMS API (https://smartsms.aligo.in)
ALIGO_API_KEY=
ALIGO_USER_ID=
ALIGO_SENDER=                         # Registered sender phone number

# Juso (도로명주소) API (https://www.juso.go.kr)
NEXT_PUBLIC_JUSO_API_KEY=

# ===========================================
# Server Configuration
# ===========================================
# Ports
BACKEND_PORT=8000                     # Backend API
FRONTEND_PORT=3500                    # Frontend (dev: 3500, prod: 3000)

# URLs
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
CORS_ORIGINS=http://localhost:3500,http://127.0.0.1:3500

# Base Path (운영에서 서브 경로 사용 시)
# - 개발: 비워두거나 설정하지 않음
# - 운영: /homecare (예: test.com/homecare)
NEXT_PUBLIC_BASE_PATH=

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO                        # DEBUG, INFO, WARNING, ERROR
LOG_RETENTION_DAYS=90                 # 로그 파일 보관 일수
LOG_DIR=/data/logs                    # 로그 파일 저장 경로

# ===========================================
# Production Only
# ===========================================
# Production domain (Apache handles SSL)
# DOMAIN=your-domain.com
